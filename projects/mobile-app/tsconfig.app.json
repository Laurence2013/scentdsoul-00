/* To learn more about this file see: https://angular.io/config/tsconfig. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node"]
  },
  "include": [
		"src/**/*.ts",
    "src/**/*.d.ts"
  ],
	"files": [
		"src/main.ts",
    "src/polyfills.ts",
    "src/env.d.ts"
	],
	"exclude": [
		"src/**/*.spec.ts",
		"src/test.ts"
	]
}
